<!DOCTYPE html>
<html>
  <head>
    <title>Interactiver</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all'  %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body>

    <header class="header">
      <div class="header-bar">
        <a href="/" class="top-title">Interactiver</a>
        <%= yield :header %>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <%= link_to current_user.nickname, user_path(current_user.id), class: "post" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>

    <%= yield %>

    <footer>
      <div class="footer">
        <div class="footer-object">
          Copyright Interactiver 2021.
        </div>
      </div>
    </footer>

  </body>
</html>